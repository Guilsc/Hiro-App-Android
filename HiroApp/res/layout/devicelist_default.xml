<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/devicelist_default_relmain"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="#F4F4F4" >

        <RelativeLayout
            android:id="@+id/devicelist_default_rel_imageMain"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/square"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/devicelist_default_imageMain"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                android:src="@drawable/add_a" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/devicelist_default_rel_imageMain"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <com.hiroapp.font.OpenSansLight
                    android:id="@+id/devicelist_default_txt_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Add New"
                    android:paddingLeft="10dp"
                    android:textColor="#36383C"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/devicelist_default_img_battery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:src="@drawable/forwardarrow_a" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:background="@android:color/darker_gray" >
            </View>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_marginLeft="5dp">

                <ImageView
                    android:id="@+id/devicelist_default_img_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/settings_i" />

                <View
                    android:id="@+id/devicelist_default_view"
                    android:layout_width="0.5dp"
                    android:layout_height="fill_parent"
                    android:layout_toLeftOf="@+id/devicelist_default_img_settings"
                    android:background="@android:color/darker_gray" >
                </View>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_toLeftOf="@+id/devicelist_default_view"
                    android:orientation="horizontal"
                    android:weightSum="3" >

                    <ImageView
                        android:id="@+id/devicelist_default_img_sound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/buzzer_i" />

                    <ImageView
                        android:id="@+id/devicelist_default_img_rssi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/signal_i" />

                    <ImageView
                        android:id="@+id/devicelist_default_img_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/location_i" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>